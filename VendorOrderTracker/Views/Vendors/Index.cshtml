@using VendorOrderTracker.Models;

<h1>Vendor List</h1>

@if (@Model.Count == 0)
{
  <h3>You haven't added any vendors yet</h3>
}

@foreach (Vendor vendor in Model)
{
  <h3><a href='/vendors/@vendor.Id'>@vendor.Name: @vendor.Description</a></h3>
}
<p><a href='/vendors/new'>Add a Vendor</a></p>
<p><a href='/'>Go Home</a></p>